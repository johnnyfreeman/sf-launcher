vertical-padding = 10px
horizontal-padding = 12px

big-font-size = 18px
little-font-size = 12px

primary-font-color = #333
secondary-font-color = #666

body
    color primary-font-color
    margin 1px
    padding 0
    width 400px

.resultsList
    margin 0
    padding 0

#searchBox
    padding vertical-padding horizontal-padding
    font-size big-font-size
    width 100%

    &:focus, &:active
        outline 0
        border 0

.result
    background-color #f5f5f5
    margin-bottom 1px
    padding vertical-padding horizontal-padding

    .title
        font-size big-font-size
        font-weight bold

    .description
        color secondary-font-color
        font-size little-font-size

.selected
    background-color #337ab7
    color white

    .description
        color #c7ddef
