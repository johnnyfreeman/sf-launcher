vertical-padding = 10px
horizontal-padding = 12px

big-font-size = 18px
little-font-size = 12px

primary-font-color = #333
secondary-font-color = #666

body
    color primary-font-color
    margin 1px
    padding 0
    width 500px

#searchBox
    padding vertical-padding horizontal-padding
    font-size big-font-size
    width 100%

    &:focus, &:active
        outline 0
        border 0

.resultsList
    list-style none
    margin 0
    padding 0
    // scrollbar
    overflow-y scroll
    max-height 391px

.result
    background-color #f5f5f5
    margin-bottom 1px
    padding vertical-padding horizontal-padding

    .icon
        float left
        font-size 28px
        margin-right 10px
        margin-top 3px

    .title
        font-size big-font-size
        font-weight bold

    .description
        color secondary-font-color
        font-size little-font-size

.selected
    background-color #337ab7
    color white

    .description
        color #c7ddef

.truncate
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
