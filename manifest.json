{
    "manifest_version": 2,

    "name": "Winston",
    "description": "A launcher for the web",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": "src/img/icon.png",
        "default_popup": "src/popup.html"
    },

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "tabs",
        "bookmarks",
        "clipboardWrite",
        "history",
        "storage"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["src/js/content.js"]
    }],
    "options_ui": {
        "page": "src/options.html",
        "chrome_style": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Space",
                "mac": "MacCtrl+Space",
                "chromeos": "Ctrl+Space",
                "linux": "Ctrl+Space"
            }
        }
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
